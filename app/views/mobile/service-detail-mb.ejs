<div class="service-detail-mb">
  <section>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="mb"><i class="fa fa-home"></i> Trang chủ</a></li>
            <li class="breadcrumb-item mb" active aria-current="page"> <%=postsdetail.post[0].title%></li>
        </ol>
    </nav>
    <div class="service-outstanding">
      <div class="service-item">
        <figure>
          <img src="/dich-vu-tot-nhat-chi-phi-re-nhat.jpg" class="round" alt="Dịch vụ cho thuê ghế massage theo yêu cầu giá rẻ nhất">
        </figure>
      </div>
      <div class="service-item">
        <figure>
          <img src="/thu-tuc-don-gian-nhanh-chong.jpg" class="round" alt="thủ tục cho thuê ghế massage đơn giản, nhanh chóng">
        </figure>
      </div>
      <div class="service-item">
        <figure>
          <img src="/mien-phi-lap-dat-van-chuyen.jpg" class="round" alt="Miễn phí vận chuyển lắp đặt ghế massage">
        </figure>
      </div>
    </div>
    <div class="service-content">
        <h1 class="title-service mb"> <%-postsdetail.post[0].title%></h1>
        <div class="body-service-content mb">
           <%-postsdetail.post[0].description%>
        </div>
    </div>
    <div class="aside-right-postdetail mb">
      <aside>
        <div class="suggest">
            <figure class="template post">
                      <figcaption>Các dịch vụ khác</figcaption>
                      <b></b>
            </figure>
            <div class="view-content post">
                <ul class="list-padding" style="">
                  <%for(var i=0;i<postsfilter.count;i++){%>
                    <li class="">
                      <h5>
                        <a href="/<%=postsfilter.post[i].titleseo%>"><i class="fa fa-angle-double-right"></i> <%=postsfilter.post[i].title%></a>
                      </h5>
                    </li>
                    <%}%>
                </ul>
            </div>
        </div>
      </aside>
    </div>
  </section>
</div>
